<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#faebd7">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView style="?android:textAppearanceMedium"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Definition 1.1"
                    android:gravity="start" />

                <TextView style="?android:textAppearanceMedium"
                    android:fontFamily="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.1 Set Elements and Subsets"
                    android:gravity="end" />

            </LinearLayout>

            <net.coronite.mathview.MathView
                android:id="@+id/formula_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                auto:text="When \\(a \\ne 0\\), there are two solutions to \\(ax^2 + bx + c = 0\\)
        and they are $$x = {-b \\pm \\sqrt{b^2-4ac} \\over 2a}.$$"
                auto:engine="MathJax"
                >
            </net.coronite.mathview.MathView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/answer_button" />

            <TextView style="?android:textAppearanceMedium"
                android:id="@+id/answer"
                android:padding="16dp"
                android:lineSpacingMultiplier="1.2"
                android:fontFamily="serif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/card_answer"
                android:gravity="center"
                android:background="#dce9ff"
                android:layout_margin="24dp" />

        </LinearLayout>



    </ScrollView>



